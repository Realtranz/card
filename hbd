<body>
    <div class="confetti">
        <!-- Confetti pieces generated by JavaScript -->
    </div>
    <div class="container">
        <div class="heading">Selamat Ulang Tahun!</div>
        <div class="message">
            Semoga semua harapanmu menjadi kenyataan dan hidupmu dipenuhi dengan kebahagiaan!
        </div>
    </div>
    <script>
        function createConfettiPiece() {
            const confetti = document.createElement('div');
            confetti.classList.add('confetti-piece');
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.animationDelay = Math.random() * 2 + 's';
            confetti.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 75%)`;
            return confetti;
        }

        const confettiContainer = document.querySelector('.confetti');
        for (let i = 0; i < 100; i++) {
            confettiContainer.appendChild(createConfettiPiece());
        }
    </script>
</body>
